<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/Playstation"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/silver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="Playstation 5"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Playstation" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Описание"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/title_text_view"
        app:layout_constraintRight_toLeftOf="@+id/characteristics"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

    <TextView
        android:id="@+id/characteristics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Характеристики"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/description"
        app:layout_constraintRight_toRightOf="@+id/title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Игровая приставка нового поколения от всемирно известной корпорации Sony. Новинка имеет абсолютно новый дизайн как самой консоли, так и игрового джойстика. Выход новинки ожидается в конце 2020-го года доступен для предзаказа"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/description"
        app:layout_constraintRight_toRightOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/characteristics_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Характеристики Playstation 5"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/characteristics"
        app:layout_constraintRight_toRightOf="@+id/characteristics"
        app:layout_constraintTop_toBottomOf="@+id/characteristics" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="description_text,characteristics_text" />

    <TextView
        android:id="@+id/fast_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Быстрое сообщение"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/description"
        app:layout_constraintRight_toRightOf="@+id/characteristics"
        app:layout_constraintTop_toBottomOf="@+id/barrier" />

    <Button
        android:id="@+id/hello_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Привет!"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="@+id/fast_message_text_view"
        app:layout_constraintRight_toLeftOf="@+id/price_button"
        app:layout_constraintTop_toBottomOf="@+id/fast_message_text_view" />

    <Button
        android:id="@+id/price_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена?"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/hello_button"
        app:layout_constraintRight_toLeftOf="@+id/new_button"
        app:layout_constraintTop_toBottomOf="@+id/fast_message_text_view"
        app:layout_constraintTop_toTopOf="@+id/hello_button"

        />

    <Button
        android:id="@+id/new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новая?"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/price_button"
        app:layout_constraintRight_toRightOf="@+id/fast_message_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fast_message_text_view"
        app:layout_constraintTop_toTopOf="@+id/hello_button" />
</androidx.constraintlayout.widget.ConstraintLayout>