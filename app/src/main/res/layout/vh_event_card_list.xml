<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vh_event_card_list_margin_bottom"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/event_card_frame_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_card_list_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/event_card_list_title_text_view_margin_start"
            android:textColor="@android:color/white"
            android:textSize="@dimen/event_card_list_title_text_view_text_size"
            android:textStyle="bold"
            tools:text="Android"
            tools:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/event_card_list_move_to_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/event_card_list_move_to_image_view_margin_end"
            app:srcCompat="@drawable/ic_arrow_forward_bold" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_card_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/event_card_list_recycler_view_margin_top"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:paddingStart="@dimen/event_card_list_recycler_view_padding_start"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/vh_event_card" />
</LinearLayout>